{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "nodenext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "nodenext",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "pretty": false,
    "moduleDetection": "force",
    "noUnusedLocals": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "src/**/*.*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts"
  ],
}